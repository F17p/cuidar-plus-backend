generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  phone        String?
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())
}

model Patient {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String?
  notes     String?
  createdAt DateTime @default(now())
}

model Appointment {
  id        String   @id @default(uuid())
  patientId String
  patient   Patient  @relation(fields: [patientId], references: [id])
  startAt   DateTime
  endAt     DateTime
  status    AppointmentStatus @default(SCHEDULED)
  notes     String?
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  SECRETARY
  DOCTOR
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  CANCELLED
  COMPLETED
}
